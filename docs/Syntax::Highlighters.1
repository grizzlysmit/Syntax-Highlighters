sub highlight\-var($var \-\-> Str:D) is export {
    my $actions = VariablesActions;
    my $tmp = Variables\&.parse($var, :enc('UTF\-8'), :$actions)\&.made;;
    HighlighterFailed\&.new(:msg("Error: Variables\&.parse Failed\&."))\&.throw if $tmp === Any;
    return $tmp;
} # sub highlight\-var($var \-\-> Str:D) is export #


